{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>api3dao/renovate-config", "docker:disable"],
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["chai", "solhint", "eslint"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    },
    {
      "matchPackageNames": ["node", "actions/node-versions", "@types/node", "pnpm"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackageNames": ["@api3/*"],
      "matchUpdateTypes": ["major"],
      "schedule": ["before 6pm"],
      "groupName": "api3 major updates",
      "dependencyDashboardApproval": false
    },
    {
      "matchPackageNames": ["@api3/*"],
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["before 6pm"],
      "groupName": "api3"
    }
  ],
  "reviewers": ["bbenligiray", "hiletmis"]
}
